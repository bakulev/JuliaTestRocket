{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Julia: Activate Project",
			"type": "shell",
			"command": "julia",
			"args": [
				"--project=.",
				"-e",
				"using Pkg; Pkg.activate(\".\"); Pkg.instantiate()"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Julia: Run Point Controller",
			"type": "shell",
			"command": "julia",
			"args": [
				"--project=.",
				"run_app.jl"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"dependsOn": "Julia: Activate Project"
		},
		{
			"label": "Julia: Run Tests",
			"type": "shell",
			"command": "julia",
			"args": [
				"--project=.",
				"-e",
				"using Pkg; Pkg.test()"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Julia: Run Point Controller",
			"type": "shell",
			"command": "julia",
			"args": [
				"--project=.",
				"run_app.jl"
			],
			"group": "build"
		},
		{
			"label": "Docs: Build",
			"type": "shell",
			"command": "julia",
			"args": [
				"--project=docs",
				"scripts/docs_build.jl"
			],
			"group": "build"
		}
	]
}